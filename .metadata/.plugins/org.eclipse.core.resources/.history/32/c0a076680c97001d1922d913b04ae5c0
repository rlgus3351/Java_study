package javaproject;

import java.util.Random;

public class Ex21 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		// 문제. 중복이 없이 숫자를 뽑는 로또 프로그램을 만드시오
		// 로또 번호 : 1~50
		Random r = new Random();

		int[] num = new int[6];
		for (int i = 0; i < num.length; i++) {
			num[i] = r.nextInt(50) + 1;
			for(int j = 0; j < i ; j++)
			{
				if(num[j] == num[i]) {
					i = i-1;
					break;
				}
					
			}
			System.out.println("행운의 숫자 : " + num[i]);
		}
		

	}

}
