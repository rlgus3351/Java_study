package test2;

import java.util.Scanner;

public class Ex08 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);

		int result = 0;

		while (true) {
			System.out.print("A입력 >>");
			int a = sc.nextInt();
			System.out.print("B입력 >>");
			int b = sc.nextInt();
			if (a == 0 && b == 0) {
				break;
			}
			result = a - b;
			System.out.println("결과 >> " + result);
		}
	}

}
