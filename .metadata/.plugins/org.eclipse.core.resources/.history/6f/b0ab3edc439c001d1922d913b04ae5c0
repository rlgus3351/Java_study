package test2;

import java.util.Scanner;

public class Ex02 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.print("일한 시간을 입력하세요 : ");
		int work = sc.nextInt();
		int max = 8;
		System.out.println("총 임금은 " max > work ? max * 5000 + (int) (max - work) * 1.5 * 5000 : work * 5000);

	}

}
