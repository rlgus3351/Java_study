package test1;

import java.util.Scanner;

public class Ex17 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Scanner sc = new Scanner(System.in);
		System.out.print("n 입력 : ");
		int num = sc.nextInt();
		
		for(int i=0, j = 1; i<num; i++) {
			j+=i;
			System.out.print(j+" ");
		}
		
	}

}
