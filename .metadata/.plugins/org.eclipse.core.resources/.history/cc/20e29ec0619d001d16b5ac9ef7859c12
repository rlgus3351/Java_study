package test2;

import java.util.Arrays;
import java.util.Scanner;

public class Ex34 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.print("2진수를 입력하세요.");
		String str = sc.next();
		String[] array = str.split("");
		int[] two = new int[array.length];

		for (int i = 0; i < two.length; i++) {
			if (i == two.length - 1) {
				two[i] = 1;
			} else {
				two[i] = powerN(2, two.length - 1 - i);
			}
		}
		int sum = 0; // 합계를 담아줄 변수sum 선언
		for (int i = 0; i < array.length; i++) {
			if (array[i].equals("1")) { // array 배열에 자리수가 1이면 해당 값을 num의 자리값에 곱한 수를 sum에 저장
				sum += two[i] * 1;
			}
		}
		System.out.print(sum + "(10)"); // 10진수 출력
	}

	public static int powerN(int base, int n) {
		int result = base;
		for (int i = 1; i < n; i++) {
			result *= base;
		}
		return result;
	}

}
