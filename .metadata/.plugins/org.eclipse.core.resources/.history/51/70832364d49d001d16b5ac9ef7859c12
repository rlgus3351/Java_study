package test2;

public class Ex03 {

	public static void main(String[] args) {
		int result = 0;
		for (int i = 1; i <= 100; i++) {
			if (i % 2 == 0) {
				System.out.print(-i+" ");
				result -= i;
			} else {
				System.out.print(i+" ");
				result += i;
			}
		}
		System.out.println();
		System.out.printf("결과 : %d", result);

	}

}
